<% @properties.each do |property| %>
  <div class="mb-4">
    <%= label_tag "product[property_values_attributes][][value]", property.name, class: "block text-gray-700 font-bold mb-2" %>
    <%= hidden_field_tag "product[property_values_attributes][][property_id]", property.id %>
    <%= text_field_tag "product[property_values_attributes][][value]",
        @product.property_values.find { |pv| pv.property_id == property.id }&.value,
        class: "w-full p-2 border border-gray-300 rounded-lg" %>
  </div>
<% end %>
