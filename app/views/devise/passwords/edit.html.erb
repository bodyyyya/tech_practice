<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Зміна пароля
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Введіть новий пароль, щоб завершити відновлення
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "mt-8 space-y-6" }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <% if resource.errors.any? %>
        <div class="rounded-md mb-3 bg-red-50 p-4">
          <div class="flex">
            <div class="ml-3">
              <ul class="mt-1 text-sm text-red-700">
                <% resource.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Новий пароль", class: "appearance-none rounded-t-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "sr-only" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Підтвердження пароля", class: "appearance-none rounded-b-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.submit "Оновити пароль", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>

    <div class="text-sm text-center">
      <%= link_to "Повернутись до входу", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>
